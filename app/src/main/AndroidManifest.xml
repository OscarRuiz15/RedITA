<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itaeducativa.android.redita">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FirebaseApplication"
        android:fullBackupContent="false"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.actividad.actividad.ui.CrearActividadActivity"/>
        <activity android:name=".ui.login.SingUpActivity" />
        <activity android:name=".ui.usuario.PerfilActivity" />
        <activity android:name=".ui.actividad.actividad.ui.ActividadActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>